package Dao;

import java.util.Scanner;



import org.hibernate.Session;
import org.hibernate.SessionFactory;
import org.hibernate.Transaction;

import Conne.Connt;
import Model.Login;

public class Dao implements DaoInter {

	Scanner sc,sc1;
	SessionFactory f;
	public Dao()
	{
		f=Connt.getSessionFact();
		
		sc= new Scanner (System.in);
		sc1= new Scanner (System.in);
			
	}
	public boolean SignIn( int userId, int userpass) {
		Session ses=f.openSession()	;
		Transaction tx=ses.beginTransaction();
		Login l = new Login.find(Login.class,userId);
		if ((l != null) && (userpass==l.getUserPass()){
            
            System.out.println("Book details: " + l);
        } else {
            System.out.println("Book with Bno " + bn + " not found.");
        }

		ses.save(l);
		tx.commit();
        ses.close();
        return true;
		
		}

}
