package com.hex.hiberHQL.com.hex.hiberHQL;

import org.hibernate.Query;
import org.hibernate.Session;
import org.hibernate.SessionFactory;
import org.hibernate.Transaction;
import org.hibernate.cfg.Configuration;





/**
 * Hello world!
 *
 */
public class App 
{
	
	SessionFactory fac;
	Session ses;
	Transaction tx;

	App() {
		fac = new Configuration().configure("hiber.cfg.xml").addAnnotatedClass(Product.class).buildSessionFactory();

		ses = fac.openSession();

	}
	
	void insertProduct(String name , Double price) {
		tx = ses.beginTransaction();
		String hql = "insert into product p values(p.name=:nm,p.price=:pp)";
		Query q = ses.createQuery(hql);
		
		  q.setParameter("nm", name);
		  q.setParameter("pp", name);  
		  int result=q.executeUpdate();
	      tx.commit();
	      if (result > 0) {
	          System.out.println("Item added");
	      } else {
	          System.out.println("Failed to add item");
	      }
	}
	
	
	
	
	
	
	
	
	
	
	
	
	
    public static void main( String[] args )
    {
        System.out.println( "Hello World!" );
    }
}
